.container
  .comment_header
    .comment_back_icon
      = link_to image_tag('矢印.png'), :back
  %p.comment_title COMMENT
    
  .comment#post-show{data:{post_id: @post.id}}
    
  .comments-container

  .comment-set
    - if user_signed_in?
      .comment-text-area
        = text_area_tag :comment_content, '', class: 'sm w-100',size: '1x1'
      .btn-secondary.btn.w-100.add-comment-btn
        Comment
  = link_to 'TOP', root_path, class: 'link_to_top'